{
  "name": "@naui-react/core",
  "version": "0.1.0",
  "description": "A modern React component library built with TypeScript, Storybook, and TailwindCSS",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "tsup",
    "test": "vitest",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:watch": "vitest watch",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "playwright test --project=chromium-visual",
    "test:visual:update": "playwright test --project=chromium-visual --update-snapshots",
    "test:all": "pnpm test:unit:coverage && pnpm test:e2e && pnpm test:visual",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm tsc --noEmit && cd .storybook && pnpm tsc --noEmit",
    "check": "pnpm format:check && pnpm lint && pnpm typecheck && pnpm test:all",
    "fix": "pnpm format && pnpm lint:fix",
    "build-storybook": "storybook build",
    "storybook": "storybook dev -p 6006",
    "prepublishOnly": "pnpm run build",
    "preversion": "pnpm run check",
    "postversion": "git push && git push --tags",
    "create-component": "tsx scripts/create-component.ts",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.5",
    "@chromatic-com/storybook": "^3.2.4",
    "@playwright/test": "^1.50.0",
    "@size-limit/preset-small-lib": "^11.0.2",
    "@storybook/addon-a11y": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/addon-onboarding": "^8.5.2",
    "@storybook/blocks": "^8.0.0",
    "@storybook/manager-api": "^8.5.2",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@storybook/test": "^8.5.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.10.10",
    "@types/react": "^18.2.58",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.3.1",
    "autoprefixer": "^10.4.17",
    "axe-core": "^4.8.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-storybook": "^0.8.0",
    "jsdom": "^26.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "size-limit": "^11.0.2",
    "storybook": "^8.5.2",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.0.0"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "typescript",
    "tailwindcss",
    "accessibility"
  ],
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.mjs",
      "limit": "10 KB"
    }
  ]
}
